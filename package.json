{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yahoo-japan-weather",
  "title": "Yahoo! JAPAN Weather",
  "description": "Check Yahoo! JAPAN Weather from Raycast",
  "icon": "yahoo.png",
  "author": "peiming_wu",
  "categories": [
    "News",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "weather",
      "title": "Weather",
      "description": "Search places for checking weather",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.2",
    "@raycast/utils": "^1.10.1",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.11"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "lint-relaxed": "ray lint --relaxed",
    "publish": "npx @raycast/api@latest publish"
  }
}